{{#if model.label}}
    <label>
        {{model.label}}:
        {{#if model.required}}*{{/if}}
    </label>
{{/if}}

{{#if model.tooltipContent}}
    {{help-tool-tip
        dataHtml="true"
        dataContent=model.tooltipContent
        dataTrigger="hover"
    }}
{{/if}}

{{#if model.content_source}}
    {{#if model.content_source_relation_values}}
        {{view Ember.Select
        classNames="form-control"
        content=model.content_source_relation_values
        optionLabelPath=model.content_source_relation_values_labelKey
        optionValuePath=model.content_source_relation_values_valueKey
        value=content_source_relation
        prompt="Choose"
        }}
    {{else}}
        <p>
            <small>{{{model.related_field_info}}}</small>
        </p>
    {{/if}}
{{/if}}

{{#if model.helpLine}}
    <p class="help-block">
        {{{model.helpLine}}}
    </p>
{{/if}}


{{#if layoutEditMode}}
    {{record-field-display-layout-edit-controls removeFieldAction="removeField" changeOrderUpAction="changeOrderUp" changeOrderDownAction="changeOrderDown"}}
{{/if}}