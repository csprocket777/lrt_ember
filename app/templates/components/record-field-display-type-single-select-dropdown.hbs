{{#if model.label}}
    <label>
        {{model.label}}:
        {{#if model.required}}*{{/if}}
    </label>
{{/if}}

{{#if model.tooltipContent}}
    {{help-tool-tip
        dataHtml="true"
        dataContent=model.tooltipContent
        dataTrigger="hover"
    }}
{{/if}}

{{#if fieldValueModel.isDirty}}
    <span class="label label-info pull-right field-status-tag">CHANGED</span>
{{/if}}


{{#if model.content_source}}

    {{#if model.field_dependant_on}}
        {{#if relatedFieldContentValues}}
            {{view "enhanced-select"
                content=relatedFieldContentValues
                optionLabelPath=model.content_source_relation_values_labelKey
                optionValuePath=model.content_source_relation_values_valueKey
                value=content_source_relation
                selection=selectedValue
                placeholder="Choose"
                allowClear=true
            }}
        {{else}}
            <p>
                <small>{{{model.related_field_info}}}</small>
            </p>
        {{/if}}
    {{else}}
        {{#if model.content_source_relation_values}}
            {{view "enhanced-select"
                content=model.content_source_relation_values
                optionLabelPath=model.content_source_relation_values_labelKey
                optionValuePath=model.content_source_relation_values_valueKey
                value=content_source_relation
                selection=selectedValue
                placeholder="Choose"
                allowClear=true
            }}
        {{/if}}
    {{/if}}
{{/if}}

{{#if model.helpLine}}
    <p class="help-block">
        {{{model.helpLine}}}
    </p>
{{/if}}


{{#if layoutEditMode}}
    {{record-field-display-layout-edit-controls removeFieldAction="removeField" changeOrderUpAction=changeOrderUpAction changeOrderDownAction=changeOrderDownAction}}
{{/if}}