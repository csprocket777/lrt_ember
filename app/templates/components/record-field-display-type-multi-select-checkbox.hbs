{{#if model.label}}
    <label>
        {{model.label}}:
        {{#if model.required}}*{{/if}}
    </label>
{{/if}}

{{#if model.tooltipContent}}
    {{help-tool-tip
        dataHtml="true"
        dataContent=model.tooltipContent
        dataTrigger="hover"
    }}
{{/if}}

{{#if fieldValueModel.isDirty}}
    <span class="label label-info pull-right field-status-tag">CHANGED</span>
{{/if}}

{{#if model.content_source}}
    {{#if model.field_dependant_on}}
        {{#if relatedFieldContentValues}}
            <ul class="list-group">
                {{#each relatedFieldContentValues itemController='checkbox-group-list-item'}}
                    <li class="list-group-item">{{label}}  {{view "checkbox-group" class="pull-right" value=this groupContainer=parentController.fieldValue checked=checked}}</li>
                {{/each}}
            </ul>
        {{else}}
            <p>
                <small>{{{model.related_field_info}}}</small>
            </p>
        {{/if}}
    {{else}}
        {{#if model.content_source_relation_values}}
            <ul class="list-group">
                {{#each model.content_source_relation_values itemController='checkbox-group-list-item'}}
                    <li class="list-group-item">{{label}}  {{view "checkbox-group" class="pull-right" value=this groupContainer=parentController.fieldValue checked=checked}}</li>
                {{/each}}
            </ul>
        {{/if}}
    {{/if}}
{{/if}}

{{#if model.helpLine}}
    <p class="help-block">
        {{{model.helpLine}}}
    </p>
{{/if}}


{{#if layoutEditMode}}
    {{record-field-display-layout-edit-controls removeFieldAction="removeField" changeOrderUpAction="changeOrderUp" changeOrderDownAction="changeOrderDown"}}
{{/if}}