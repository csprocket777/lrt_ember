<div id="loginContainer">
	<div id="loginBox">
		<h1>Learning Request Tracker</h1>
		<form role="form"  {{action 'login' username password on="submit"}}>
			<div {{bind-attr class=":form-group showUsernameLoginErrors:has-error" }} class="form-group">
				{{input id="loginField" type="text" value=username class="form-control" placeholder="CEC"}}
				{{#if showUsernameLoginErrors}}<span class="help-block">{{{errors.username}}}</span>{{/if}}
			</div>
			<div {{bind-attr class=":form-group showPasswordLoginErrors:has-error" }}>
				{{input id="passwordField" type="password" value=password class="form-control" placeholder="Password"}}
				{{#if showPasswordLoginErrors}}<span class="help-block">{{{errors.password}}}</span>{{/if}}
			</div>
			<div class="form-group">
				<input type="submit" value="Login" {{bind-attr class=":btn :btn-primary"}}/>
			</div>
		</form>
		
		{{#if errorMessage}}
			<div id="loginMessage" class="alert alert-danger text-left">
				<h4>An error has occurred</h4>
				<p>{{{errorMessage}}}</p>
			</div>
		{{/if}}
	</div>
    <div class="lastBuildStatus">
        <img src="http://tm-projects.cisco.com:8111/app/rest/builds/buildType:(id:Lrt2_NodeBuild)/statusIcon"/>
    </div>
</div>


