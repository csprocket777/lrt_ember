{{#with model as recordModel}}
    {{#with fullView.topLevelDefinitions controller="template-layout-field-list"}}
        {{#each arrangedContent}}
            {{record-layout-definition
                model=this
                layoutEditMode=false
                recordValueModel=recordModel
                recordEditMode=controller.recordEditMode
            }}
        {{/each}}
    {{/with}}
{{/with}}

{{record-loading-modal}}

<nav id="save-menu" class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
    <div class="navbar-header">
        {{#if isEditable}}
            <a class="navbar-brand" href="#">Editing</a>
        {{else}}
            <a class="navbar-brand" href="#">View Only</a>
        {{/if}}
    </div>

    <div class="collapse navbar-collapse navbar-ex1-collapse pull-right">
        {{#if isEditable}}
            {{#link-to "record" model.id class="btn btn-default navbar-btn"}}Cancel{{/link-to}}
            {{#if unsavedChanges}}
                <button class="btn btn-warning" {{action "revertChanges"}}>Revert ({{unsavedChanges.length}}) Changes</button>
                <button class="btn btn-success" {{action "saveChanges"}}>Save ({{unsavedChanges.length}}) Changes</button>
            {{/if}}
        {{else}}
            {{#link-to "record.edit" model.id class="btn btn-default navbar-btn"}}Edit Record{{/link-to}}
        {{/if}}
    </div>
</nav>