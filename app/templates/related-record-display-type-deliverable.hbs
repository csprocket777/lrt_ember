<div class="alert alert-block alert-warning">
    <h4>TODO</h4>
    <p>Complete functionality once value system is hooked up</p>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Modality</th>
            <th>Complexity</th>
            <th>Duration / Pages</th>
            <th>Assessment</th>
            <th>Content Readiness</th>
            <th>% new content</th>
            <th>Mobile?</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#if model.length}}
            {{#each model}}
                <tr>
                    <td>{{jobModality.optionValue}}</td>
                    <td>{{jobComplexity.optionValue}}</td>
                    <td>{{jobContentDuration}} {{jobContentDurationUnit.optionValue}}</td>
                    <td>{{assessment}}</td>
                    <td>{{contentReadiness}}</td>
                    <td>{{percentNewContent}}</td>
                    <td>{{mobileNeeded}}</td>
                    <td></td>
                </tr>
            {{/each}}
        {{else}}
            <tr>
                <td colspan="8">No Deliverables yet...</td>
            </tr>
        {{/if}}
    </tbody>

    <tfoot>
        <tr>
            <th colspan="8">
                <button class="btn btn-primary btn-xs" type="button"><i class="glyphicon glyphicon-plus"></i> Add Deliverable</button>
            </th>
        </tr>
    </tfoot>
</table>